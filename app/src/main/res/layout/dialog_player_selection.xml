<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- Bottone X per chiudere -->
    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Chiudi"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Container per i bottoni dei giocatori organizzati in due file -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/closeButton">

        <!-- Prima fila di bottoni (1-5) -->
        <Button
            android:id="@+id/playerButton1"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="1"
            android:textColor="@color/selector_player_button_text"
            android:textSize="0sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/playerButton2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.15"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/playerButton2"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="2"
            android:textColor="@color/selector_player_button_text"
            android:textSize="0sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/playerButton3"
            app:layout_constraintStart_toEndOf="@id/playerButton1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.15"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/playerButton3"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="3"
            android:textColor="@color/selector_player_button_text"
            android:textSize="0sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/playerButton4"
            app:layout_constraintStart_toEndOf="@id/playerButton2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.15"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/playerButton4"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="4"
            android:textColor="@color/selector_player_button_text"
            android:textSize="0sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/playerButton5"
            app:layout_constraintStart_toEndOf="@id/playerButton3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.15"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/playerButton5"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="5"
            android:textColor="@color/selector_player_button_text"
            android:textSize="0sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/playerButton4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.15"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="2dp" />

        <!-- Seconda fila di bottoni (6-10) -->
        <Button
            android:id="@+id/playerButton6"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="6"
            android:textColor="@color/selector_player_button_text"
            android:textSize="0sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/playerButton7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playerButton1"
            app:layout_constraintWidth_percent="0.15"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/playerButton7"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="7"
            android:textColor="@color/selector_player_button_text"
            android:textSize="0sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/playerButton8"
            app:layout_constraintStart_toEndOf="@id/playerButton6"
            app:layout_constraintTop_toBottomOf="@id/playerButton2"
            app:layout_constraintWidth_percent="0.15"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/playerButton8"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="8"
            android:textColor="@color/selector_player_button_text"
            android:textSize="0sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/playerButton9"
            app:layout_constraintStart_toEndOf="@id/playerButton7"
            app:layout_constraintTop_toBottomOf="@id/playerButton3"
            app:layout_constraintWidth_percent="0.15"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/playerButton9"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="9"
            android:textColor="@color/selector_player_button_text"
            android:textSize="0sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/playerButton10"
            app:layout_constraintStart_toEndOf="@id/playerButton8"
            app:layout_constraintTop_toBottomOf="@id/playerButton4"
            app:layout_constraintWidth_percent="0.15"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/playerButton10"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="10"
            android:textColor="@color/selector_player_button_text"
            android:textSize="0sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/playerButton9"
            app:layout_constraintTop_toBottomOf="@id/playerButton5"
            app:layout_constraintWidth_percent="0.15"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="2dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Solo pulsante SEND centrato -->
    <Button
        android:id="@+id/sendButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="SEND"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:backgroundTint="@color/primary_color"
        app:layout_constraintTop_toBottomOf="@id/buttonsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Rimuoviamo completamente il pulsante CANCEL e il LinearLayout -->

</androidx.constraintlayout.widget.ConstraintLayout>