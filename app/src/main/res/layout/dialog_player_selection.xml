<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleziona posti liberi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container per i bottoni dei giocatori organizzati in due file -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/dialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Prima fila di bottoni (1-5) -->
        <Button
            android:id="@+id/playerButton1"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:textColor="@color/selector_player_button_text"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/playerButton2"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/playerButton2"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:textColor="@color/selector_player_button_text"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/playerButton1"
            app:layout_constraintEnd_toStartOf="@id/playerButton3"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/playerButton3"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:textColor="@color/selector_player_button_text"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/playerButton2"
            app:layout_constraintEnd_toStartOf="@id/playerButton4"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/playerButton4"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:textColor="@color/selector_player_button_text"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/playerButton3"
            app:layout_constraintEnd_toStartOf="@id/playerButton5"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/playerButton5"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:textColor="@color/selector_player_button_text"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/playerButton4"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="3dp" />

        <!-- Seconda fila di bottoni (6-10) -->
        <Button
            android:id="@+id/playerButton6"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:textColor="@color/selector_player_button_text"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/playerButton1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/playerButton7"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/playerButton7"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:textColor="@color/selector_player_button_text"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/playerButton2"
            app:layout_constraintStart_toEndOf="@id/playerButton6"
            app:layout_constraintEnd_toStartOf="@id/playerButton8"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/playerButton8"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:textColor="@color/selector_player_button_text"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/playerButton3"
            app:layout_constraintStart_toEndOf="@id/playerButton7"
            app:layout_constraintEnd_toStartOf="@id/playerButton9"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/playerButton9"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:textColor="@color/selector_player_button_text"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/playerButton4"
            app:layout_constraintStart_toEndOf="@id/playerButton8"
            app:layout_constraintEnd_toStartOf="@id/playerButton10"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/playerButton10"
            style="@style/PlayerCircleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="10"
            android:textColor="@color/selector_player_button_text"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:backgroundTint="@color/bg_player_button_color"
            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/playerButton5"
            app:layout_constraintStart_toEndOf="@id/playerButton9"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/player_button_stroke_color"
            app:strokeWidth="3dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottoni azione -->
    <LinearLayout
        android:id="@+id/actionButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/buttonsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SEND"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/primary_color" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>